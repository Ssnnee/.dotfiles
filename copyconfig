#!/usr/bin/env bash
# This script copy dotfiles to the repo location. In this case,
# ~/.coding/.dotfiles

RED='\033[0;31m'
GREEN='\033[0;32m'

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

repo_path=~/.coding/.dotfiles
app_list="cava wob fuzzel ghostty yazi dunst kitty picom waybar tmux sway swaylock aliasrc neofetch  rofi zathura scripts hypr i3 awesome"

for app in $app_list; do
    cp -r ~/.config/"$app" ~/.coding/.dotfiles/.config/
done

# Copy zshrc
if cp ~/.zshrc $repo_path then
    print_success "Configs copied successfully"
else
    print_error "Some forder does not exist anymore"
fi

cp -r ~/.coding/st/config.h ~/.coding/.dotfiles/.config/st/
